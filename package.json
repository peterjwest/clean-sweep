{
  "name": "unlinted",
  "version": "0.1.0",
  "description": "General purpose project-wide linting and hygiene",
  "type": "module",
  "main": "./build/code/index.js",
  "exports": {
    "import": "./build/code/index.js",
    "require": "./build/wrapper.cjs"
  },
  "bin": {
    "unlinted": "./build/unlinted.sh"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterjwest/unlinted.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "license": "MIT",
  "homepage": "https://github.com/peterjwest/unlinted#readme",
  "keywords": [
    "linting",
    "whitespace",
    "files",
    "unicode"
  ],
  "scripts": {
    "build": "rm -rf build/code && tsup src/index.ts src/unlinted.ts --format cjs,esm --dts --out-dir build/code",
    "lint:ts": "eslint .",
    "lint:unlinted": " tsx src/unlinted.ts",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "npx test-snippets",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@types/sinon": "^10.0.16",
    "@vitest/coverage-v8": "^0.34.2",
    "chalk": "^5.3.0",
    "ignore": "^5.2.4",
    "jschardet": "^3.0.0",
    "lodash": "^4.17.21",
    "multiline-ts": "^3.1.0",
    "sinon": "^15.2.0",
    "test-snippets": "^1.0.0",
    "tsx": "^3.12.7",
    "zod": "^3.22.1",
    "zod-validation-error": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.22.10",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/lodash": "^4.14.197",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "sinon-assert-stub": "^2.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.2"
  }
}

{
  "name": "unlinted",
  "version": "1.0.0",
  "description": "General purpose project-wide linting and hygiene",
  "type": "module",
  "main": "./build/code/index.js",
  "exports": {
    "import": "./build/code/index.js",
    "require": "./build/wrapper.cjs"
  },
  "bin": {
    "unlinted": "./build/unlinted.sh"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterjwest/unlinted.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "license": "MIT",
  "homepage": "https://github.com/peterjwest/unlinted#readme",
  "keywords": [
    "linting",
    "whitespace",
    "files",
    "unicode"
  ],
  "scripts": {
    "build": "rm -rf build/code && tsup src/index.ts src/unlinted.ts --format cjs,esm --dts --out-dir build/code",
    "lint:ts": "eslint .",
    "lint:unlinted": "tsx src/unlinted.ts",
    "lint:dependencies": "depcheck",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "npx test-snippets",
    "preinstall": "npx only-allow pnpm",
    "prepublish": "pnpm install && pnpm build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ignore": "^5.3.1",
    "jschardet": "^3.1.3",
    "lodash": "^4.17.21",
    "multiline-ts": "^4.0.0",
    "tsx": "^4.16.2",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.0.0",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.0.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.8.0",
    "sinon": "^18.0.0",
    "sinon-assert-stub": "^2.1.0",
    "test-snippets": "^2.0.0",
    "tsup": "^8.2.3",
    "type-fest": "^4.23.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  }
}

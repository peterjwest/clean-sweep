{
  "name": "unlinted",
  "version": "0.1.0",
  "description": "Project-wide linting and hygiene",
  "type": "module",
  "main": "./build/wrapper.cjs",
  "exports": {
    "import": "./build/es6/index.js",
    "require": "./build/wrapper.cjs"
  },
  "bin": {
    "unlinted": "./build/unlinted.sh"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peterjwest/unlinted.git"
  },
  "files": [
    "/build"
  ],
  "author": "Peter West",
  "license": "MIT",
  "homepage": "https://github.com/peterjwest/unlinted#readme",
  "keywords": [
    "linting",
    "whitespace",
    "files",
    "unicode"
  ],
  "scripts": {
    "build": "rm -rf build/code && tsup src/index.ts src/unlinted.ts --format cjs,esm --dts --out-dir build/code",
    "lint": "eslint .",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "npx test-snippets",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@vitest/coverage-v8": "^0.34.1",
    "chalk": "^5.3.0",
    "ignore": "^5.2.4",
    "jschardet": "^3.0.0",
    "lodash": "^4.17.21",
    "multiline-ts": "^3.1.0",
    "test-snippets": "^1.0.0",
    "tsx": "^3.12.7",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/eslint-parser": "^7.22.9",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.4.4",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0"
  }
}
